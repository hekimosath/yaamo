<% content_for :css do %>
  <%= stylesheet_link_tag 'menus' %>
<% end %>
<p id="notice"><%= notice %></p>

<h1>お料理たち</h1>

<div class="table-responsive table_wrap">
  <table class="table table-dark table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>料理名</th>
        <th>参考URL</th>
        <th>備考</th>
        <th>料理の国籍</th>
        <th>主菜・副菜</th>
        <th>タグ（カンマ区切り）</th>
        <th>材料（カンマ区切り）</th>
        <th>作成日</th>
        <th>更新日</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.menu_name %></td>
        <td><%= menu.reference_url %></td>
        <td><%= menu.notes %></td>
        <td><%= menu.cat_nationality %></td>
        <td><%= menu.cat_main_or_side %></td>
        <td><%= menu.tags %></td>
        <td><%= menu.materials %></td>
        <td><%= menu.created %></td>
        <td><%= menu.updated %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Menu', new_menu_path %>
